<Page x:Class="Steganography.Encode"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Steganography"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="700"
      Title="Encode">

    <Grid>
        <Canvas Height="500" Width="700" Background="White">
            <Button x:Name="button" Content="Choose picture" Canvas.Left="88" Canvas.Top="43" Width="190" Height="34" Click="button_Click"/>
            <Image x:Name="image" Height="202" Canvas.Left="54" Canvas.Top="108" Width="254"/>
            <Button x:Name="button1" Content="Choose file" Canvas.Left="88" Canvas.Top="330" Width="190" Height="34" Click="button1_Click"/>
            <TextBox x:Name="textBox" Height="59" Canvas.Left="88" TextWrapping="Wrap" Text="TextBox" Canvas.Top="396" Width="190"/>
            <Button x:Name="button2" Content="Encode" Canvas.Left="398" Canvas.Top="108" Width="190" Height="34" Click="button2_Click"/>
            <Image x:Name="image1" Height="202" Canvas.Left="370" Canvas.Top="183" Width="254"/>
        </Canvas>

    </Grid>
</Page>
